{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["plugin:react/recommended", "airbnb"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "arrow-parens": [2, "as-needed"],
    // "quotes": [2, "double", { "avoidEscape": true }],
    "prettier/prettier": [
      1,
      {
        "useTabs": false,
        "printWidth": 120,
        "tabWidth": 2
      }
    ]
  }
}
